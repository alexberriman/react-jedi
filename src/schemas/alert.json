{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "type": {
      "const": "alert"
    },
    "properties": {
      "type": "object",
      "properties": {
        "variant": {
          "type": "string",
          "enum": ["default", "destructive"],
          "description": "Visual variant of the alert"
        },
        "className": {
          "type": "string",
          "description": "Additional CSS classes"
        },
        "role": {
          "type": "string",
          "default": "alert",
          "description": "ARIA role for the alert"
        }
      }
    },
    "children": {
      "oneOf": [
        { "type": "string" },
        {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["alert-title", "alert-description", "icon"]
              },
              "properties": {
                "type": "object"
              },
              "children": {
                "oneOf": [
                  { "type": "string" },
                  { "type": "array" }
                ]
              }
            },
            "required": ["type"]
          }
        }
      ]
    }
  },
  "required": ["type"]
}