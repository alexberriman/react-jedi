{
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "PhotoFlipCard"
    },
    "id": {
      "type": "string",
      "description": "Unique identifier for the photo flip card component"
    },
    "frontImage": {
      "type": "string",
      "description": "Front image URL"
    },
    "frontImageAlt": {
      "type": "string",
      "description": "Alt text for the front image"
    },
    "title": {
      "type": "string",
      "description": "Card title (shown on front)"
    },
    "description": {
      "type": "string",
      "description": "Card description (shown on front)"
    },
    "overlay": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "Back overlay title"
        },
        "description": {
          "type": "string",
          "description": "Back overlay description"
        },
        "badge": {
          "type": "string",
          "description": "Badge text"
        },
        "content": {
          "$ref": "#/definitions/componentSpecification",
          "description": "Custom content for back"
        }
      },
      "additionalProperties": false
    },
    "cta": {
      "type": "object",
      "properties": {
        "text": {
          "type": "string",
          "description": "CTA button text"
        },
        "variant": {
          "type": "string",
          "enum": ["default", "destructive", "outline", "secondary", "ghost", "link"],
          "default": "secondary",
          "description": "Button variant"
        },
        "onClick": {
          "type": "string",
          "description": "Click handler"
        },
        "href": {
          "type": "string",
          "description": "Link URL"
        }
      },
      "required": ["text"]
    },
    "variant": {
      "type": "string",
      "enum": ["vertical-flip", "horizontal-flip", "fade", "slide-reveal", "rotation-3d"],
      "default": "vertical-flip",
      "description": "Flip animation variant"
    },
    "size": {
      "type": "string",
      "enum": ["sm", "md", "lg", "xl", "auto"],
      "default": "md",
      "description": "Card size"
    },
    "aspectRatio": {
      "type": "string",
      "enum": ["square", "video", "portrait", "wide", "auto"],
      "default": "square",
      "description": "Aspect ratio"
    },
    "borderRadius": {
      "type": "string",
      "enum": ["none", "sm", "md", "lg", "xl", "full"],
      "default": "lg",
      "description": "Border radius"
    },
    "trigger": {
      "type": "string",
      "enum": ["hover", "click", "touch"],
      "default": "hover",
      "description": "Interaction trigger"
    },
    "gradientOverlay": {
      "type": "object",
      "properties": {
        "from": {
          "type": "string",
          "description": "Gradient from color"
        },
        "to": {
          "type": "string",
          "description": "Gradient to color"
        },
        "direction": {
          "type": "string",
          "enum": ["to-t", "to-tr", "to-r", "to-br", "to-b", "to-bl", "to-l", "to-tl"],
          "description": "Gradient direction"
        },
        "opacity": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Gradient opacity"
        }
      },
      "additionalProperties": false
    },
    "shadow": {
      "type": "string",
      "enum": ["none", "sm", "md", "lg", "xl", "2xl"],
      "default": "md",
      "description": "Shadow size"
    },
    "animated": {
      "type": "boolean",
      "default": true,
      "description": "Enable entrance animation"
    },
    "animationDuration": {
      "type": "number",
      "default": 0.6,
      "description": "Flip animation duration in seconds"
    },
    "className": {
      "type": "string",
      "description": "Additional CSS classes"
    },
    "style": {
      "type": "object",
      "description": "Inline styles"
    }
  },
  "required": ["type", "frontImage"],
  "additionalProperties": false
}