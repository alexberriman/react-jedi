{
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "TypewriterText"
    },
    "id": {
      "type": "string",
      "description": "Unique identifier for the typewriter text component"
    },
    "variant": {
      "type": "string",
      "enum": ["basic", "delete-retype", "rotation", "infinite", "one-time"],
      "default": "basic",
      "description": "Animation variant"
    },
    "texts": {
      "oneOf": [
        {
          "type": "string",
          "description": "Single text to type"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Array of texts to cycle through"
        }
      ]
    },
    "typeSpeed": {
      "type": "number",
      "default": 50,
      "description": "Typing speed in milliseconds per character"
    },
    "deleteSpeed": {
      "type": "number",
      "default": 30,
      "description": "Deletion speed in milliseconds per character"
    },
    "pauseDuration": {
      "type": "number",
      "default": 1000,
      "description": "Pause duration between texts in milliseconds"
    },
    "deleteDelay": {
      "type": "number",
      "default": 1000,
      "description": "Delay before deletion starts in milliseconds"
    },
    "loop": {
      "type": "boolean",
      "default": true,
      "description": "Whether to loop the animation"
    },
    "startDelay": {
      "type": "number",
      "default": 0,
      "description": "Initial delay before typing starts"
    },
    "showCursor": {
      "type": "boolean",
      "default": true,
      "description": "Show typing cursor"
    },
    "cursorStyle": {
      "type": "string",
      "enum": ["block", "line", "underscore", "custom"],
      "default": "line",
      "description": "Cursor style"
    },
    "cursorChar": {
      "type": "string",
      "default": "|",
      "description": "Custom cursor character"
    },
    "cursorBlink": {
      "type": "boolean",
      "default": true,
      "description": "Enable cursor blinking"
    },
    "cursorBlinkSpeed": {
      "type": "number",
      "default": 1000,
      "description": "Cursor blink speed in milliseconds"
    },
    "textSize": {
      "type": "string",
      "enum": ["xs", "sm", "base", "lg", "xl", "2xl", "3xl", "4xl", "5xl", "6xl"],
      "default": "base",
      "description": "Text size"
    },
    "textColor": {
      "type": "string",
      "description": "Text color"
    },
    "cursorColor": {
      "type": "string",
      "description": "Cursor color"
    },
    "fontWeight": {
      "type": "string",
      "enum": ["normal", "medium", "semibold", "bold"],
      "default": "normal",
      "description": "Font weight"
    },
    "fontFamily": {
      "type": "string",
      "enum": ["sans", "serif", "mono"],
      "default": "sans",
      "description": "Font family"
    },
    "alignment": {
      "type": "string",
      "enum": ["left", "center", "right"],
      "default": "left",
      "description": "Text alignment"
    },
    "animated": {
      "type": "boolean",
      "default": true,
      "description": "Enable entrance animation"
    },
    "reduceMotion": {
      "type": "boolean",
      "default": false,
      "description": "Force reduced motion mode"
    },
    "onComplete": {
      "type": "string",
      "description": "Completion callback"
    },
    "onTextChange": {
      "type": "string",
      "description": "Text change callback"
    },
    "className": {
      "type": "string",
      "description": "Additional CSS classes"
    },
    "style": {
      "type": "object",
      "description": "Inline styles"
    }
  },
  "required": ["type", "texts"],
  "additionalProperties": false
}