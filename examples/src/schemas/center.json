{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Center Component Schema",
  "description": "Centers its children horizontally and/or vertically using flexbox",
  "type": "object",
  "properties": {
    "type": {
      "const": "center"
    },
    "props": {
      "type": "object",
      "properties": {
        "as": {
          "type": "string",
          "enum": ["div", "section", "main", "article"],
          "default": "div",
          "description": "The HTML element to render as"
        },
        "fullHeight": {
          "type": "boolean",
          "default": false,
          "description": "Whether the center container should take full viewport height"
        },
        "fullWidth": {
          "type": "boolean",
          "default": false,
          "description": "Whether the center container should take full width"
        },
        "direction": {
          "type": "string",
          "enum": ["horizontal", "vertical", "both"],
          "default": "both",
          "description": "The direction to center content"
        },
        "className": {
          "type": "string",
          "description": "Additional CSS classes to apply"
        },
        "style": {
          "type": "object",
          "description": "Inline styles to apply",
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    },
    "children": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/component"
      },
      "description": "Child components to center"
    }
  },
  "required": ["type"],
  "additionalProperties": false,
  "definitions": {
    "component": {
      "type": "object",
      "description": "Generic component reference"
    }
  }
}