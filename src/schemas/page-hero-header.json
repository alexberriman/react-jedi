{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PageHeroHeader",
  "description": "A flexible hero header component for landing pages with multiple layout variants and rich content support",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": ["PageHeroHeader", "page-hero-header"],
      "description": "Component type"
    },
    "props": {
      "type": "object",
      "properties": {
        "variant": {
          "type": "string",
          "enum": ["centered", "split", "fullscreen", "minimal", "left-aligned", "right-aligned", "multi-column"],
          "description": "Layout variant of the hero header",
          "default": "centered"
        },
        "title": {
          "type": "string",
          "description": "Main heading text"
        },
        "titleLevel": {
          "type": "string",
          "enum": ["h1", "h2", "h3"],
          "description": "HTML heading element to use",
          "default": "h1"
        },
        "subtitle": {
          "type": "string",
          "description": "Secondary heading text"
        },
        "description": {
          "type": "string",
          "description": "Descriptive paragraph text"
        },
        "primaryCTA": {
          "type": "object",
          "description": "Primary call-to-action button",
          "properties": {
            "label": {
              "type": "string",
              "description": "Button text"
            },
            "href": {
              "type": "string",
              "description": "Link URL"
            },
            "onClick": {
              "type": "string",
              "description": "Click handler function name"
            },
            "variant": {
              "type": "string",
              "enum": ["default", "outline", "secondary", "ghost", "link", "destructive"],
              "description": "Button variant",
              "default": "default"
            },
            "size": {
              "type": "string",
              "enum": ["default", "sm", "lg"],
              "description": "Button size",
              "default": "default"
            },
            "icon": {
              "type": "string",
              "enum": ["arrow", "chevron", "play", "none"],
              "description": "Icon to display",
              "default": "none"
            },
            "iconPosition": {
              "type": "string",
              "enum": ["left", "right"],
              "description": "Icon position",
              "default": "right"
            }
          },
          "required": ["label"]
        },
        "secondaryCTA": {
          "type": "object",
          "description": "Secondary call-to-action button",
          "properties": {
            "label": {
              "type": "string",
              "description": "Button text"
            },
            "href": {
              "type": "string",
              "description": "Link URL"
            },
            "onClick": {
              "type": "string",
              "description": "Click handler function name"
            },
            "variant": {
              "type": "string",
              "enum": ["default", "outline", "secondary", "ghost", "link", "destructive"],
              "description": "Button variant",
              "default": "outline"
            },
            "size": {
              "type": "string",
              "enum": ["default", "sm", "lg"],
              "description": "Button size",
              "default": "default"
            },
            "icon": {
              "type": "string",
              "enum": ["arrow", "chevron", "play", "none"],
              "description": "Icon to display",
              "default": "none"
            },
            "iconPosition": {
              "type": "string",
              "enum": ["left", "right"],
              "description": "Icon position",
              "default": "right"
            }
          },
          "required": ["label"]
        },
        "tertiaryLink": {
          "type": "object",
          "description": "Tertiary text link",
          "properties": {
            "label": {
              "type": "string",
              "description": "Link text"
            },
            "href": {
              "type": "string",
              "description": "Link URL"
            }
          },
          "required": ["label", "href"]
        },
        "badges": {
          "type": "array",
          "description": "Badges to display above the title",
          "items": {
            "type": "object",
            "properties": {
              "text": {
                "type": "string",
                "description": "Badge text"
              },
              "variant": {
                "type": "string",
                "enum": ["default", "secondary", "destructive", "outline"],
                "description": "Badge variant",
                "default": "default"
              }
            },
            "required": ["text"]
          }
        },
        "stats": {
          "type": "array",
          "description": "Statistics to display",
          "items": {
            "type": "object",
            "properties": {
              "value": {
                "type": "string",
                "description": "Statistic value"
              },
              "label": {
                "type": "string",
                "description": "Statistic label"
              }
            },
            "required": ["value", "label"]
          }
        },
        "image": {
          "type": "object",
          "description": "Hero image configuration",
          "properties": {
            "src": {
              "type": "string",
              "description": "Image source URL"
            },
            "alt": {
              "type": "string",
              "description": "Alt text for the image"
            },
            "position": {
              "type": "string",
              "enum": ["right", "left", "background", "bottom"],
              "description": "Image position",
              "default": "right"
            },
            "objectFit": {
              "type": "string",
              "enum": ["contain", "cover", "fill", "none", "scale-down"],
              "description": "Object fit property",
              "default": "cover"
            },
            "priority": {
              "type": "boolean",
              "description": "Whether to load the image with priority",
              "default": false
            }
          },
          "required": ["src", "alt"]
        },
        "video": {
          "type": "object",
          "description": "Background video configuration",
          "properties": {
            "src": {
              "type": "string",
              "description": "Video source URL"
            },
            "poster": {
              "type": "string",
              "description": "Poster image URL"
            },
            "autoPlay": {
              "type": "boolean",
              "description": "Auto-play the video",
              "default": true
            },
            "loop": {
              "type": "boolean",
              "description": "Loop the video",
              "default": true
            },
            "muted": {
              "type": "boolean",
              "description": "Mute the video",
              "default": true
            }
          },
          "required": ["src"]
        },
        "backgroundImage": {
          "type": "object",
          "description": "Background image configuration",
          "properties": {
            "src": {
              "type": "string",
              "description": "Background image URL"
            },
            "overlay": {
              "type": "string",
              "enum": ["dark", "light", "gradient", "none"],
              "description": "Overlay type",
              "default": "dark"
            },
            "overlayOpacity": {
              "type": "number",
              "description": "Overlay opacity (0-1)",
              "minimum": 0,
              "maximum": 1,
              "default": 0.5
            },
            "parallax": {
              "type": "boolean",
              "description": "Enable parallax effect",
              "default": false
            }
          },
          "required": ["src"]
        },
        "height": {
          "type": "string",
          "enum": ["full", "large", "medium", "auto"],
          "description": "Height of the hero section",
          "default": "large"
        },
        "alignment": {
          "type": "string",
          "enum": ["left", "center", "right"],
          "description": "Text alignment",
          "default": "left"
        },
        "spacing": {
          "type": "string",
          "enum": ["tight", "normal", "loose"],
          "description": "Vertical padding",
          "default": "normal"
        },
        "backgroundColor": {
          "type": "string",
          "description": "Custom background color class"
        },
        "textColor": {
          "type": "string",
          "description": "Custom text color"
        },
        "maxWidth": {
          "type": "string",
          "enum": ["sm", "md", "lg", "xl", "2xl", "full"],
          "description": "Maximum width of the content",
          "default": "xl"
        },
        "animated": {
          "type": "boolean",
          "description": "Enable entrance animations",
          "default": true
        },
        "className": {
          "type": "string",
          "description": "Additional CSS classes"
        }
      },
      "required": ["title"]
    }
  },
  "required": ["type", "props"],
  "examples": [
    {
      "type": "PageHeroHeader",
      "props": {
        "variant": "centered",
        "title": "Build Amazing Products Faster",
        "subtitle": "The modern way to create exceptional user experiences",
        "description": "Our platform provides everything you need to design, develop, and deploy beautiful applications at scale.",
        "primaryCTA": {
          "label": "Get Started Free",
          "variant": "default",
          "size": "lg",
          "icon": "arrow"
        },
        "secondaryCTA": {
          "label": "Watch Demo",
          "variant": "outline",
          "size": "lg",
          "icon": "play"
        },
        "badges": [
          { "text": "New", "variant": "default" },
          { "text": "v2.0 Released", "variant": "secondary" }
        ]
      }
    },
    {
      "type": "PageHeroHeader",
      "props": {
        "variant": "split",
        "title": "Welcome to the Future",
        "description": "Experience next-generation tools",
        "primaryCTA": {
          "label": "Start Building"
        },
        "image": {
          "src": "https://placehold.co/800x450",
          "alt": "Dashboard preview",
          "position": "right"
        }
      }
    }
  ]
}