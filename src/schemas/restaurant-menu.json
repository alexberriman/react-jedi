{
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "RestaurantMenu"
    },
    "id": {
      "type": "string",
      "description": "Unique identifier for the restaurant menu component"
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Category identifier"
          },
          "name": {
            "type": "string",
            "description": "Category name"
          },
          "description": {
            "type": "string",
            "description": "Category description"
          },
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "description": "Item identifier"
                },
                "name": {
                  "type": "string",
                  "description": "Item name"
                },
                "description": {
                  "type": "string",
                  "description": "Item description"
                },
                "price": {
                  "type": "number",
                  "description": "Item price"
                },
                "originalPrice": {
                  "type": "number",
                  "description": "Original price (for sale items)"
                },
                "image": {
                  "type": "string",
                  "description": "Item image URL"
                },
                "category": {
                  "type": "string",
                  "description": "Item category"
                },
                "dietaryRestrictions": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "enum": ["vegan", "vegetarian", "gluten-free", "dairy-free", "nut-free", "keto", "paleo", "low-carb", "organic"]
                  },
                  "description": "Dietary restrictions"
                },
                "allergens": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "enum": ["nuts", "dairy", "gluten", "shellfish", "eggs", "soy", "fish", "sesame"]
                  },
                  "description": "Allergen information"
                },
                "nutritionalInfo": {
                  "type": "object",
                  "properties": {
                    "calories": {
                      "type": "number",
                      "description": "Calories"
                    },
                    "protein": {
                      "type": "string",
                      "description": "Protein amount"
                    },
                    "carbs": {
                      "type": "string",
                      "description": "Carbohydrates amount"
                    },
                    "fat": {
                      "type": "string",
                      "description": "Fat amount"
                    },
                    "fiber": {
                      "type": "string",
                      "description": "Fiber amount"
                    },
                    "sodium": {
                      "type": "string",
                      "description": "Sodium amount"
                    }
                  },
                  "additionalProperties": false
                },
                "isSpecial": {
                  "type": "boolean",
                  "description": "Is special item"
                },
                "isPopular": {
                  "type": "boolean",
                  "description": "Is popular item"
                },
                "isNew": {
                  "type": "boolean",
                  "description": "Is new item"
                },
                "spiceLevel": {
                  "type": "number",
                  "enum": [1, 2, 3, 4, 5],
                  "description": "Spice level (1-5)"
                },
                "prepTime": {
                  "type": "number",
                  "description": "Preparation time in minutes"
                },
                "ingredients": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "description": "List of ingredients"
                }
              },
              "required": ["id", "name", "description", "price", "category"]
            }
          },
          "image": {
            "type": "string",
            "description": "Category image URL"
          },
          "availableTime": {
            "type": "string",
            "description": "Availability time (e.g., 'All Day', 'Lunch Only')"
          }
        },
        "required": ["id", "name", "items"]
      },
      "description": "Menu categories"
    },
    "variant": {
      "type": "string",
      "enum": ["default", "light", "dark", "elegant", "minimal"],
      "default": "default",
      "description": "Visual variant"
    },
    "spacing": {
      "type": "string",
      "enum": ["tight", "normal", "relaxed"],
      "default": "normal",
      "description": "Spacing between elements"
    },
    "layout": {
      "type": "string",
      "enum": ["categorized", "single-column", "two-column", "grid-cards", "prix-fixe"],
      "default": "categorized",
      "description": "Layout variant"
    },
    "showSearch": {
      "type": "boolean",
      "default": true,
      "description": "Show search functionality"
    },
    "showFilters": {
      "type": "boolean",
      "default": true,
      "description": "Show category and dietary filters"
    },
    "showImages": {
      "type": "boolean",
      "default": true,
      "description": "Show item images"
    },
    "showNutrition": {
      "type": "boolean",
      "default": false,
      "description": "Show nutritional information"
    },
    "showIngredients": {
      "type": "boolean",
      "default": false,
      "description": "Show ingredients list"
    },
    "currency": {
      "type": "string",
      "default": "$",
      "description": "Currency symbol"
    },
    "locale": {
      "type": "string",
      "default": "en-US",
      "description": "Locale for formatting"
    },
    "title": {
      "type": "string",
      "default": "Our Menu",
      "description": "Menu title"
    },
    "description": {
      "type": "string",
      "description": "Menu description"
    },
    "onItemSelect": {
      "type": "string",
      "description": "Item selection handler"
    },
    "searchPlaceholder": {
      "type": "string",
      "default": "Search menu items...",
      "description": "Search input placeholder"
    },
    "showPrepTime": {
      "type": "boolean",
      "default": false,
      "description": "Show preparation time"
    },
    "showSpiceLevel": {
      "type": "boolean",
      "default": false,
      "description": "Show spice level indicator"
    },
    "compactMode": {
      "type": "boolean",
      "default": false,
      "description": "Use compact display mode"
    },
    "maxColumns": {
      "type": "number",
      "enum": [2, 3, 4],
      "default": 3,
      "description": "Maximum columns in grid layouts"
    },
    "className": {
      "type": "string",
      "description": "Additional CSS classes"
    },
    "children": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/componentSpecification"
      },
      "description": "Additional child components"
    }
  },
  "required": ["type", "categories"],
  "additionalProperties": false
}