{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Date Picker Schema",
  "description": "Schema for the Date Picker component in react-jedi",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "DatePicker",
      "description": "Specifies the DatePicker component"
    },
    "value": {
      "type": "string",
      "format": "date-time",
      "description": "Initial date value in ISO 8601 format"
    },
    "placeholder": {
      "type": "string",
      "default": "Pick a date",
      "description": "Placeholder text when no date is selected"
    },
    "disabled": {
      "type": "boolean",
      "default": false,
      "description": "Whether the date picker is disabled"
    },
    "onChange": {
      "type": "string",
      "description": "State key or action to trigger when date changes"
    },
    "format": {
      "type": "string",
      "default": "PPP",
      "description": "Date format pattern for display"
    },
    "minDate": {
      "type": "string",
      "format": "date-time",
      "description": "Minimum selectable date"
    },
    "maxDate": {
      "type": "string",
      "format": "date-time",
      "description": "Maximum selectable date"
    },
    "className": {
      "type": "string",
      "description": "Custom CSS classes for styling"
    },
    "styles": {
      "type": "object",
      "description": "Custom inline styles object"
    }
  },
  "required": ["type"],
  "additionalProperties": false,
  "examples": [
    {
      "type": "DatePicker",
      "placeholder": "Select your birthday"
    },
    {
      "type": "DatePicker",
      "value": "2024-12-25T00:00:00.000Z",
      "placeholder": "Event date",
      "onChange": "eventDate"
    },
    {
      "type": "DatePicker",
      "placeholder": "Start date",
      "minDate": "2024-01-01T00:00:00.000Z",
      "maxDate": "2024-12-31T23:59:59.999Z"
    }
  ]
}