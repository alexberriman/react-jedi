{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/switch-component.schema.json",
  "title": "Switch Component Schema",
  "description": "Schema for React Switch component specification",
  "type": "object",
  "required": ["type"],
  "properties": {
    "type": {
      "type": "string",
      "const": "Switch"
    },
    "id": {
      "type": "string",
      "description": "Unique identifier for the component"
    },
    "props": {
      "type": "object",
      "properties": {
        "checked": {
          "type": "boolean",
          "description": "Controlled checked state of the switch"
        },
        "defaultChecked": {
          "type": "boolean",
          "description": "Default checked state for uncontrolled mode",
          "default": false
        },
        "disabled": {
          "type": "boolean",
          "description": "Whether the switch is disabled",
          "default": false
        },
        "animated": {
          "type": "boolean",
          "description": "Whether to animate the switch transition",
          "default": true
        },
        "onCheckedChange": {
          "type": "string",
          "description": "Event handler name for when the checked state changes"
        },
        "value": {
          "type": "string",
          "description": "Value for form submission"
        },
        "name": {
          "type": "string",
          "description": "Name attribute for form submission"
        },
        "className": {
          "type": "string",
          "description": "Additional CSS classes"
        }
      },
      "additionalProperties": false
    }
  },
  "example": {
    "type": "Switch",
    "id": "dark-mode-switch",
    "props": {
      "defaultChecked": false,
      "onCheckedChange": "toggleDarkMode",
      "value": "darkMode",
      "name": "theme"
    }
  }
}