{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/schemas/menubar",
  "title": "Menubar",
  "description": "A visually persistent menu common in desktop applications that provides quick access to a consistent set of commands",
  "type": "object",
  "required": ["type", "menus"],
  "properties": {
    "type": {
      "type": "string",
      "const": "menubar"
    },
    "menus": {
      "type": "array",
      "description": "Array of menu items in the menubar",
      "items": {
        "$ref": "#/definitions/menu"
      }
    }
  },
  "definitions": {
    "menu": {
      "type": "object",
      "required": ["trigger", "items"],
      "properties": {
        "trigger": {
          "type": "string",
          "description": "The text displayed for the menu trigger"
        },
        "items": {
          "type": "array",
          "description": "Array of items in the menu",
          "items": {
            "oneOf": [
              {
                "$ref": "#/definitions/menuItem"
              },
              {
                "$ref": "#/definitions/submenu"
              },
              {
                "$ref": "#/definitions/checkboxItem"
              },
              {
                "$ref": "#/definitions/radioGroup"
              },
              {
                "$ref": "#/definitions/separator"
              }
            ]
          }
        }
      }
    },
    "menuItem": {
      "type": "object",
      "required": ["type", "label"],
      "properties": {
        "type": {
          "type": "string",
          "const": "item"
        },
        "label": {
          "type": "string",
          "description": "The text displayed for the menu item"
        },
        "shortcut": {
          "type": "string",
          "description": "Keyboard shortcut for the menu item"
        },
        "disabled": {
          "type": "boolean",
          "description": "Whether the menu item is disabled"
        },
        "inset": {
          "type": "boolean",
          "description": "Whether the menu item should be inset"
        },
        "icon": {
          "type": "string",
          "description": "Icon name for the menu item"
        },
        "variant": {
          "type": "string",
          "enum": ["default", "destructive"],
          "description": "The variant of the menu item"
        },
        "onClick": {
          "type": "object",
          "description": "Click handler for the menu item"
        }
      }
    },
    "submenu": {
      "type": "object",
      "required": ["type", "trigger", "items"],
      "properties": {
        "type": {
          "type": "string",
          "const": "submenu"
        },
        "trigger": {
          "type": "string",
          "description": "The text displayed for the submenu trigger"
        },
        "inset": {
          "type": "boolean",
          "description": "Whether the submenu trigger should be inset"
        },
        "items": {
          "type": "array",
          "description": "Array of items in the submenu",
          "items": {
            "oneOf": [
              {
                "$ref": "#/definitions/menuItem"
              },
              {
                "$ref": "#/definitions/separator"
              }
            ]
          }
        }
      }
    },
    "checkboxItem": {
      "type": "object",
      "required": ["type", "label"],
      "properties": {
        "type": {
          "type": "string",
          "const": "checkbox"
        },
        "label": {
          "type": "string",
          "description": "The text displayed for the checkbox item"
        },
        "checked": {
          "type": "boolean",
          "description": "Whether the checkbox is checked"
        },
        "onCheckedChange": {
          "type": "object",
          "description": "Handler for checkbox state changes"
        }
      }
    },
    "radioGroup": {
      "type": "object",
      "required": ["type", "items"],
      "properties": {
        "type": {
          "type": "string",
          "const": "radioGroup"
        },
        "value": {
          "type": "string",
          "description": "Currently selected value in the radio group"
        },
        "items": {
          "type": "array",
          "description": "Array of radio items",
          "items": {
            "$ref": "#/definitions/radioItem"
          }
        },
        "onValueChange": {
          "type": "object",
          "description": "Handler for radio group value changes"
        }
      }
    },
    "radioItem": {
      "type": "object",
      "required": ["value", "label"],
      "properties": {
        "value": {
          "type": "string",
          "description": "The value of the radio item"
        },
        "label": {
          "type": "string",
          "description": "The text displayed for the radio item"
        }
      }
    },
    "separator": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "const": "separator"
        }
      }
    }
  }
}