{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/alexberriman/react-jedi/schemas/table.json",
  "title": "Table Component Schema",
  "description": "Schema for Table component configuration",
  "type": "object",
  "properties": {
    "type": {
      "const": "Table",
      "description": "Component type identifier"
    },
    "className": {
      "type": "string",
      "description": "Additional CSS classes for the table container"
    },
    "caption": {
      "type": "string",
      "description": "Table caption text"
    },
    "head": {
      "type": "object",
      "description": "Table header configuration",
      "properties": {
        "rows": {
          "type": "array",
          "description": "Header rows",
          "items": {
            "type": "object",
            "properties": {
              "cells": {
                "type": "array",
                "description": "Header cells",
                "items": {
                  "type": "object",
                  "properties": {
                    "content": {
                      "type": "string",
                      "description": "Cell content"
                    },
                    "className": {
                      "type": "string",
                      "description": "Additional CSS classes for the header cell"
                    },
                    "align": {
                      "type": "string",
                      "enum": ["left", "center", "right"],
                      "default": "left",
                      "description": "Cell text alignment"
                    },
                    "colSpan": {
                      "type": "integer",
                      "minimum": 1,
                      "description": "Number of columns this cell should span"
                    }
                  },
                  "required": ["content"]
                }
              }
            },
            "required": ["cells"]
          }
        }
      }
    },
    "body": {
      "type": "object",
      "description": "Table body configuration",
      "properties": {
        "rows": {
          "type": "array",
          "description": "Body rows",
          "items": {
            "type": "object",
            "properties": {
              "className": {
                "type": "string",
                "description": "Additional CSS classes for the row"
              },
              "selected": {
                "type": "boolean",
                "description": "Whether the row is selected"
              },
              "cells": {
                "type": "array",
                "description": "Row cells",
                "items": {
                  "type": "object",
                  "properties": {
                    "content": {
                      "type": "string",
                      "description": "Cell content"
                    },
                    "className": {
                      "type": "string",
                      "description": "Additional CSS classes for the cell"
                    },
                    "align": {
                      "type": "string",
                      "enum": ["left", "center", "right"],
                      "default": "left",
                      "description": "Cell text alignment"
                    },
                    "colSpan": {
                      "type": "integer",
                      "minimum": 1,
                      "description": "Number of columns this cell should span"
                    }
                  },
                  "required": ["content"]
                }
              }
            },
            "required": ["cells"]
          }
        }
      },
      "required": ["rows"]
    },
    "footer": {
      "type": "object",
      "description": "Table footer configuration",
      "properties": {
        "rows": {
          "type": "array",
          "description": "Footer rows",
          "items": {
            "type": "object",
            "properties": {
              "cells": {
                "type": "array",
                "description": "Footer cells",
                "items": {
                  "type": "object",
                  "properties": {
                    "content": {
                      "type": "string",
                      "description": "Cell content"
                    },
                    "className": {
                      "type": "string",
                      "description": "Additional CSS classes for the footer cell"
                    },
                    "align": {
                      "type": "string",
                      "enum": ["left", "center", "right"],
                      "default": "left",
                      "description": "Cell text alignment"
                    },
                    "colSpan": {
                      "type": "integer",
                      "minimum": 1,
                      "description": "Number of columns this cell should span"
                    }
                  },
                  "required": ["content"]
                }
              }
            },
            "required": ["cells"]
          }
        }
      }
    }
  },
  "required": ["type", "body"]
}