{
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "TeamGrid"
    },
    "id": {
      "type": "string",
      "description": "Unique identifier for the team grid component"
    },
    "members": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Member identifier"
          },
          "name": {
            "type": "string",
            "description": "Member name"
          },
          "role": {
            "type": "string",
            "description": "Member role/position"
          },
          "department": {
            "type": "string",
            "description": "Department name"
          },
          "bio": {
            "type": "string",
            "description": "Member biography"
          },
          "avatar": {
            "type": "string",
            "description": "Avatar image URL"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Email address"
          },
          "phone": {
            "type": "string",
            "description": "Phone number"
          },
          "socialLinks": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "platform": {
                  "type": "string",
                  "enum": ["linkedin", "twitter", "email", "phone", "custom"],
                  "description": "Social platform"
                },
                "url": {
                  "type": "string",
                  "description": "Social link URL"
                },
                "icon": {
                  "type": "string",
                  "description": "Custom icon identifier"
                },
                "label": {
                  "type": "string",
                  "description": "Link label"
                }
              },
              "required": ["platform", "url"]
            }
          },
          "location": {
            "type": "string",
            "description": "Member location"
          },
          "joinDate": {
            "type": "string",
            "description": "Join date"
          },
          "skills": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Member skills"
          },
          "achievements": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Member achievements"
          }
        },
        "required": ["name", "role"]
      },
      "description": "Team members"
    },
    "variant": {
      "type": "string",
      "enum": ["grid", "list", "minimal", "cards", "org-chart"],
      "default": "grid",
      "description": "Display variant"
    },
    "columns": {
      "type": "string",
      "enum": ["1", "2", "3", "4", "5", "6", "auto"],
      "default": "3",
      "description": "Number of columns"
    },
    "gap": {
      "type": "string",
      "enum": ["sm", "md", "lg", "xl"],
      "default": "md",
      "description": "Gap between items"
    },
    "showDepartmentFilter": {
      "type": "boolean",
      "default": true,
      "description": "Show department filter"
    },
    "showSearch": {
      "type": "boolean",
      "default": true,
      "description": "Show search input"
    },
    "showModal": {
      "type": "boolean",
      "default": true,
      "description": "Show member detail modal"
    },
    "showSocialLinks": {
      "type": "boolean",
      "default": true,
      "description": "Show social links"
    },
    "showContactInfo": {
      "type": "boolean",
      "default": false,
      "description": "Show contact information"
    },
    "departments": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Available departments for filtering"
    },
    "animated": {
      "type": "boolean",
      "default": true,
      "description": "Enable animations"
    },
    "staggerDelay": {
      "type": "number",
      "default": 0.1,
      "description": "Animation stagger delay"
    },
    "hoverEffect": {
      "type": "string",
      "enum": ["none", "lift", "glow", "scale", "tilt"],
      "default": "lift",
      "description": "Hover effect style"
    },
    "avatarSize": {
      "type": "string",
      "enum": ["sm", "md", "lg", "xl"],
      "default": "md",
      "description": "Avatar size"
    },
    "alignment": {
      "type": "string",
      "enum": ["left", "center", "right"],
      "default": "center",
      "description": "Content alignment"
    },
    "showBio": {
      "type": "boolean",
      "default": true,
      "description": "Show member bio"
    },
    "maxBioLength": {
      "type": "number",
      "default": 120,
      "description": "Maximum bio length"
    },
    "className": {
      "type": "string",
      "description": "Additional CSS classes"
    },
    "children": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/componentSpecification"
      },
      "description": "Additional child components"
    }
  },
  "required": ["type", "members"],
  "additionalProperties": false
}