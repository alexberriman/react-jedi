{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "component": {
      "type": "string",
      "const": "CallToAction"
    },
    "properties": {
      "type": "object",
      "properties": {
        "variant": {
          "type": "string",
          "enum": ["centered", "splitScreen", "withBackgroundImage", "gradient", "minimal", "bold", "formIntegrated", "default", "primary", "secondary", "dark", "light", "glass"],
          "default": "default",
          "description": "The visual style variant of the CTA"
        },
        "size": {
          "type": "string",
          "enum": ["sm", "default", "lg", "xl"],
          "default": "default",
          "description": "The size of the CTA section"
        },
        "align": {
          "type": "string",
          "enum": ["left", "center", "right"],
          "default": "center",
          "description": "Text alignment within the CTA"
        },
        "title": {
          "type": "string",
          "description": "The main headline text"
        },
        "subtitle": {
          "type": "string",
          "description": "Optional subtitle text"
        },
        "description": {
          "type": "string",
          "description": "Additional descriptive text"
        },
        "primaryAction": {
          "type": "object",
          "properties": {
            "label": {
              "type": "string",
              "description": "Button label text"
            },
            "onClick": {
              "type": "string",
              "description": "Click handler function name"
            },
            "href": {
              "type": "string",
              "description": "Link URL for the action"
            },
            "variant": {
              "type": "string",
              "description": "Button style variant"
            },
            "icon": {
              "type": "object",
              "description": "Icon component specification"
            }
          },
          "required": ["label"]
        },
        "secondaryAction": {
          "type": "object",
          "properties": {
            "label": {
              "type": "string",
              "description": "Button label text"
            },
            "onClick": {
              "type": "string",
              "description": "Click handler function name"
            },
            "href": {
              "type": "string",
              "description": "Link URL for the action"
            },
            "variant": {
              "type": "string",
              "description": "Button style variant"
            },
            "icon": {
              "type": "object",
              "description": "Icon component specification"
            }
          },
          "required": ["label"]
        },
        "backgroundImage": {
          "type": "string",
          "description": "URL for background image"
        },
        "backgroundOverlay": {
          "type": "boolean",
          "default": true,
          "description": "Whether to show an overlay on background image"
        },
        "showAccentGraphics": {
          "type": "boolean",
          "default": true,
          "description": "Whether to show decorative graphics"
        },
        "trustIndicators": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "icon": {
                "type": "object",
                "description": "Icon component specification"
              },
              "label": {
                "type": "string",
                "description": "Indicator label text"
              },
              "value": {
                "type": "string",
                "description": "Optional value text"
              }
            },
            "required": ["label"]
          },
          "description": "Trust indicators to display"
        },
        "awards": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Award name"
              },
              "logo": {
                "type": "string",
                "description": "Award logo URL"
              }
            },
            "required": ["name"]
          },
          "description": "Award badges to display"
        },
        "animated": {
          "type": "boolean",
          "default": true,
          "description": "Whether to animate the CTA elements"
        },
        "emailPlaceholder": {
          "type": "string",
          "default": "Enter your email",
          "description": "Placeholder text for email input"
        },
        "onEmailSubmit": {
          "type": "string",
          "description": "Handler function name for email submission"
        },
        "className": {
          "type": "string",
          "description": "Additional CSS classes"
        }
      },
      "required": ["title"]
    }
  },
  "required": ["component", "properties"]
}