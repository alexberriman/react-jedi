{
  "type": "container",
  "maxWidth": "md",
  "padding": "md",
  "children": [
    {
      "type": "heading",
      "level": "h2",
      "content": "Input Component Examples",
      "size": "2xl",
      "className": "mb-6"
    },
    {
      "type": "card",
      "className": "w-full mb-8",
      "children": [
        {
          "type": "flex",
          "direction": "column",
          "gap": "md",
          "className": "p-6",
          "children": [
            {
              "type": "heading",
              "level": "h3",
              "content": "Basic Input Types",
              "size": "xl",
              "className": "mb-4"
            },
            {
              "type": "flex",
              "direction": "column",
              "gap": "sm",
              "className": "mb-4",
              "children": [
                {
                  "type": "label",
                  "text": "Text Input",
                  "htmlFor": "textInput"
                },
                {
                  "type": "input",
                  "id": "textInput",
                  "placeholder": "Enter text here",
                  "type": "text"
                }
              ]
            },
            {
              "type": "flex",
              "direction": "column",
              "gap": "sm",
              "className": "mb-4",
              "children": [
                {
                  "type": "label",
                  "text": "Email Input",
                  "htmlFor": "emailInput"
                },
                {
                  "type": "input",
                  "id": "emailInput",
                  "placeholder": "Enter your email",
                  "type": "email"
                }
              ]
            },
            {
              "type": "flex",
              "direction": "column",
              "gap": "sm",
              "className": "mb-4",
              "children": [
                {
                  "type": "label",
                  "text": "Password Input",
                  "htmlFor": "passwordInput"
                },
                {
                  "type": "input",
                  "id": "passwordInput",
                  "placeholder": "Enter your password",
                  "type": "password"
                }
              ]
            },
            {
              "type": "flex",
              "direction": "column",
              "gap": "sm",
              "className": "mb-4",
              "children": [
                {
                  "type": "label",
                  "text": "Number Input",
                  "htmlFor": "numberInput"
                },
                {
                  "type": "input",
                  "id": "numberInput",
                  "placeholder": "Enter a number",
                  "type": "number",
                  "min": 0,
                  "max": 100,
                  "step": 1
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "card",
      "className": "w-full mb-8",
      "children": [
        {
          "type": "flex",
          "direction": "column",
          "gap": "md",
          "className": "p-6",
          "children": [
            {
              "type": "heading",
              "level": "h3",
              "content": "Input States",
              "size": "xl",
              "className": "mb-4"
            },
            {
              "type": "flex",
              "direction": "column",
              "gap": "sm",
              "className": "mb-4",
              "children": [
                {
                  "type": "label",
                  "text": "Default Input",
                  "htmlFor": "defaultInput"
                },
                {
                  "type": "input",
                  "id": "defaultInput",
                  "placeholder": "Regular input field"
                }
              ]
            },
            {
              "type": "flex",
              "direction": "column",
              "gap": "sm",
              "className": "mb-4",
              "children": [
                {
                  "type": "label",
                  "text": "Disabled Input",
                  "htmlFor": "disabledInput"
                },
                {
                  "type": "input",
                  "id": "disabledInput",
                  "placeholder": "This input is disabled",
                  "disabled": true,
                  "value": "Disabled input value"
                }
              ]
            },
            {
              "type": "flex",
              "direction": "column",
              "gap": "sm",
              "className": "mb-4",
              "children": [
                {
                  "type": "label",
                  "text": "Read-only Input",
                  "htmlFor": "readonlyInput"
                },
                {
                  "type": "input",
                  "id": "readonlyInput",
                  "value": "This input is read-only",
                  "readOnly": true
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "card",
      "className": "w-full mb-8",
      "children": [
        {
          "type": "flex",
          "direction": "column",
          "gap": "md",
          "className": "p-6",
          "children": [
            {
              "type": "heading",
              "level": "h3",
              "content": "Input with Prefix/Suffix",
              "size": "xl",
              "className": "mb-4"
            },
            {
              "type": "flex",
              "direction": "column",
              "gap": "sm",
              "className": "mb-4",
              "children": [
                {
                  "type": "label",
                  "text": "Currency Input",
                  "htmlFor": "currencyInput"
                },
                {
                  "type": "inputGroup",
                  "children": [
                    {
                      "type": "inputPrefix",
                      "text": "$"
                    },
                    {
                      "type": "input",
                      "id": "currencyInput",
                      "placeholder": "0.00",
                      "type": "number",
                      "step": "0.01"
                    }
                  ]
                }
              ]
            },
            {
              "type": "flex",
              "direction": "column",
              "gap": "sm",
              "className": "mb-4",
              "children": [
                {
                  "type": "label",
                  "text": "Website URL",
                  "htmlFor": "websiteInput"
                },
                {
                  "type": "inputGroup",
                  "children": [
                    {
                      "type": "inputPrefix",
                      "text": "https://"
                    },
                    {
                      "type": "input",
                      "id": "websiteInput",
                      "placeholder": "example.com"
                    }
                  ]
                }
              ]
            },
            {
              "type": "flex",
              "direction": "column",
              "gap": "sm",
              "className": "mb-4",
              "children": [
                {
                  "type": "label",
                  "text": "Weight Input",
                  "htmlFor": "weightInput"
                },
                {
                  "type": "inputGroup",
                  "children": [
                    {
                      "type": "input",
                      "id": "weightInput",
                      "placeholder": "0",
                      "type": "number"
                    },
                    {
                      "type": "inputSuffix",
                      "text": "kg"
                    }
                  ]
                }
              ]
            },
            {
              "type": "flex",
              "direction": "column",
              "gap": "sm",
              "className": "mb-4",
              "children": [
                {
                  "type": "label",
                  "text": "Search Input",
                  "htmlFor": "searchInput"
                },
                {
                  "type": "inputGroup",
                  "children": [
                    {
                      "type": "input",
                      "id": "searchInput",
                      "placeholder": "Search..."
                    },
                    {
                      "type": "inputSuffix",
                      "icon": "search"
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}