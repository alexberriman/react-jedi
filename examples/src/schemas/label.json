{
  "type": "container",
  "maxWidth": "md",
  "padding": "md",
  "children": [
    {
      "type": "heading",
      "level": "h2",
      "content": "Label Component Examples",
      "size": "2xl",
      "className": "mb-6"
    },
    {
      "type": "card",
      "className": "w-full mb-8",
      "children": [
        {
          "type": "flex",
          "direction": "column",
          "gap": "md",
          "className": "p-6",
          "children": [
            {
              "type": "heading",
              "level": "h3",
              "content": "Basic Form Fields with Labels",
              "size": "xl",
              "className": "mb-4"
            },
            {
              "type": "flex",
              "direction": "column",
              "gap": "sm",
              "className": "mb-4",
              "children": [
                {
                  "type": "label",
                  "text": "Name",
                  "htmlFor": "name"
                },
                {
                  "type": "input",
                  "id": "name",
                  "placeholder": "Enter your name"
                }
              ]
            },
            {
              "type": "flex",
              "direction": "column",
              "gap": "sm",
              "className": "mb-4",
              "children": [
                {
                  "type": "label",
                  "text": "Email",
                  "htmlFor": "email"
                },
                {
                  "type": "input",
                  "id": "email",
                  "type": "email",
                  "placeholder": "Enter your email"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "card",
      "className": "w-full mb-8",
      "children": [
        {
          "type": "flex",
          "direction": "column",
          "gap": "md",
          "className": "p-6",
          "children": [
            {
              "type": "heading",
              "level": "h3",
              "content": "Required Field Labels",
              "size": "xl",
              "className": "mb-4"
            },
            {
              "type": "flex",
              "direction": "column",
              "gap": "sm",
              "className": "mb-4",
              "children": [
                {
                  "type": "label",
                  "text": "Username",
                  "htmlFor": "username",
                  "required": true
                },
                {
                  "type": "input",
                  "id": "username",
                  "placeholder": "Choose a username",
                  "required": true
                }
              ]
            },
            {
              "type": "flex",
              "direction": "column",
              "gap": "sm",
              "className": "mb-4",
              "children": [
                {
                  "type": "label",
                  "text": "Password",
                  "htmlFor": "password",
                  "required": true
                },
                {
                  "type": "input",
                  "id": "password",
                  "type": "password",
                  "placeholder": "Choose a password",
                  "required": true
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "card",
      "className": "w-full mb-8",
      "children": [
        {
          "type": "flex",
          "direction": "column",
          "gap": "md",
          "className": "p-6",
          "children": [
            {
              "type": "heading",
              "level": "h3",
              "content": "Labels with Helper Text",
              "size": "xl",
              "className": "mb-4"
            },
            {
              "type": "flex",
              "direction": "column",
              "gap": "sm",
              "className": "mb-4",
              "children": [
                {
                  "type": "label",
                  "text": "Display Name",
                  "htmlFor": "displayName"
                },
                {
                  "type": "input",
                  "id": "displayName",
                  "placeholder": "How you want to be known"
                },
                {
                  "type": "text",
                  "text": "This will be visible to other users on the platform.",
                  "size": "sm",
                  "variant": "muted"
                }
              ]
            },
            {
              "type": "flex",
              "direction": "column",
              "gap": "sm",
              "className": "mb-4",
              "children": [
                {
                  "type": "label",
                  "text": "Profile Picture URL",
                  "htmlFor": "profilePic"
                },
                {
                  "type": "input",
                  "id": "profilePic",
                  "placeholder": "https://example.com/image.jpg"
                },
                {
                  "type": "text",
                  "text": "Must be a valid URL to an image file (jpg, png, gif).",
                  "size": "sm",
                  "variant": "muted"
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}