{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CallToAction Component Schema",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "CallToAction"
    },
    "props": {
      "type": "object",
      "properties": {
        "variant": {
          "type": "string",
          "enum": ["default", "primary", "secondary", "gradient", "dark", "light"],
          "default": "default",
          "description": "The visual style variant of the CTA"
        },
        "size": {
          "type": "string",
          "enum": ["sm", "default", "lg"],
          "default": "default",
          "description": "The size of the CTA"
        },
        "align": {
          "type": "string",
          "enum": ["left", "center", "right"],
          "default": "center",
          "description": "Text alignment within the CTA"
        },
        "title": {
          "type": "string",
          "description": "The main heading of the CTA"
        },
        "description": {
          "type": "string",
          "description": "Supporting text for the CTA"
        },
        "primaryAction": {
          "type": "object",
          "properties": {
            "label": {
              "type": "string",
              "description": "Text for the primary action button"
            },
            "href": {
              "type": "string",
              "description": "URL for the primary action"
            },
            "onClick": {
              "type": "string",
              "description": "Click handler for the primary action"
            }
          },
          "required": ["label"],
          "description": "Primary action button configuration"
        },
        "secondaryAction": {
          "type": "object",
          "properties": {
            "label": {
              "type": "string",
              "description": "Text for the secondary action button"
            },
            "href": {
              "type": "string",
              "description": "URL for the secondary action"
            },
            "onClick": {
              "type": "string",
              "description": "Click handler for the secondary action"
            }
          },
          "required": ["label"],
          "description": "Secondary action button configuration"
        },
        "backgroundImage": {
          "type": "string",
          "description": "URL for background image"
        },
        "overlay": {
          "type": "boolean",
          "default": true,
          "description": "Whether to show overlay on background image"
        },
        "icon": {
          "type": "string",
          "description": "Icon name to display"
        },
        "showArrow": {
          "type": "boolean",
          "default": true,
          "description": "Whether to show arrow in primary action button"
        },
        "decorative": {
          "type": "boolean",
          "default": true,
          "description": "Whether to show decorative elements"
        },
        "className": {
          "type": "string",
          "description": "Additional CSS classes"
        }
      },
      "required": ["title"]
    },
    "children": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Component"
      },
      "description": "Child components for custom content"
    }
  },
  "required": ["type", "props"],
  "additionalProperties": false,
  "definitions": {
    "Component": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "props": {
          "type": "object"
        }
      },
      "required": ["type"]
    }
  }
}