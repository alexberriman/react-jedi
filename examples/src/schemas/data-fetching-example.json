{
  "version": "1.0.0",
  "dataSources": [
    {
      "id": "users",
      "type": "rest",
      "config": {
        "url": "https://jsonplaceholder.typicode.com/users",
        "method": "GET"
      },
      "cache": {
        "ttl": 300
      }
    },
    {
      "id": "posts",
      "type": "rest",
      "config": {
        "url": "https://jsonplaceholder.typicode.com/posts",
        "method": "GET",
        "params": {
          "userId": "1"
        }
      },
      "polling": {
        "interval": 30,
        "pauseWhenHidden": true
      }
    },
    {
      "id": "staticData",
      "type": "static",
      "config": {
        "data": {
          "message": "This is static data",
          "items": ["Item 1", "Item 2", "Item 3"]
        }
      }
    }
  ],
  "root": {
    "type": "Container",
    "className": "p-8",
    "children": [
      {
        "type": "Flex",
        "children": [
          {
            "type": "Heading",
            "level": 1,
            "children": "Data Fetching Example"
          },
          {
            "type": "Badge",
            "variant": "default",
            "children": "Users loaded"
          }
        ]
      },
      {
        "type": "Box",
        "className": "mt-6",
        "when": "!data.users",
        "children": {
          "type": "Text",
          "children": "Loading users..."
        }
      },
      {
        "type": "Box",
        "className": "mt-6",
        "when": "data.users",
        "children": [
          {
            "type": "Heading",
            "level": 2,
            "children": "User List"
          },
          {
            "type": "Grid",
            "columns": 3,
            "gap": 4,
            "className": "mt-4",
            "children": [
              {
                "type": "Card",
                "children": {
                  "type": "Flex",
                  "direction": "column",
                  "gap": 2,
                  "children": [
                    {
                      "type": "Text",
                      "variant": "bold",
                      "children": "Sample User"
                    },
                    {
                      "type": "Text",
                      "variant": "muted",
                      "children": "user@example.com"
                    },
                    {
                      "type": "Badge",
                      "variant": "outline",
                      "children": "Sample Company"
                    }
                  ]
                }
              }
            ]
          }
        ]
      },
      {
        "type": "Box",
        "className": "mt-6",
        "when": "data.posts",
        "children": [
          {
            "type": "Heading",
            "level": 2,
            "children": "Recent Posts"
          },
          {
            "type": "Flex",
            "direction": "column",
            "gap": 3,
            "className": "mt-4",
            "children": [
              {
                "type": "Card",
                "children": [
                  {
                    "type": "Heading",
                    "level": 3,
                    "children": "Sample Post Title"
                  },
                  {
                    "type": "Text",
                    "children": "This is a sample post body..."
                  }
                ]
              }
            ]
          }
        ]
      },
      {
        "type": "Box",
        "className": "mt-6",
        "when": "data.staticData",
        "children": [
          {
            "type": "Heading",
            "level": 2,
            "children": "Static Data"
          },
          {
            "type": "Text",
            "className": "mt-2",
            "value": "$data.staticData.message",
            "children": "Message will appear here"
          },
          {
            "type": "Flex",
            "gap": 2,
            "className": "mt-2",
            "children": [
              {
                "type": "Badge",
                "children": "Item 1"
              },
              {
                "type": "Badge",
                "children": "Item 2"
              },
              {
                "type": "Badge",
                "children": "Item 3"
              }
            ]
          }
        ]
      }
    ]
  }
}