{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["type"],
  "properties": {
    "type": {
      "type": "string",
      "const": "RadioGroup"
    },
    "props": {
      "type": "object",
      "properties": {
        "value": {
          "type": "string",
          "description": "Controlled selected value"
        },
        "defaultValue": {
          "type": "string",
          "description": "Default selected value for uncontrolled mode"
        },
        "disabled": {
          "type": "boolean",
          "description": "Whether the radio group is disabled"
        },
        "onValueChange": {
          "type": "string",
          "description": "Event handler name for value changes"
        },
        "className": {
          "type": "string",
          "description": "Additional CSS classes"
        },
        "orientation": {
          "type": "string",
          "enum": ["horizontal", "vertical"],
          "description": "Layout orientation of the radio group"
        },
        "gap": {
          "type": "string",
          "description": "Gap between radio items"
        }
      },
      "additionalProperties": false
    },
    "children": {
      "type": "array",
      "description": "RadioGroupItem components",
      "items": {
        "$ref": "#/definitions/radio-group-item"
      }
    }
  },
  "definitions": {
    "radio-group-item": {
      "type": "object",
      "required": ["type", "value"],
      "properties": {
        "type": {
          "type": "string",
          "const": "RadioGroupItem"
        },
        "value": {
          "type": "string",
          "description": "The value of this radio item"
        },
        "disabled": {
          "type": "boolean",
          "description": "Whether this item is disabled"
        },
        "id": {
          "type": "string",
          "description": "ID for label association"
        },
        "aria-label": {
          "type": "string",
          "description": "Accessible label for screen readers"
        },
        "aria-labelledby": {
          "type": "string",
          "description": "ID of element that labels this radio item"
        },
        "aria-describedby": {
          "type": "string",
          "description": "ID of element that describes this radio item"
        },
        "className": {
          "type": "string",
          "description": "Additional CSS classes"
        }
      }
    }
  }
}