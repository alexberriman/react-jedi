{
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "PhotoGallery"
    },
    "id": {
      "type": "string",
      "description": "Unique identifier for the photo gallery component"
    },
    "photos": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique photo identifier"
          },
          "src": {
            "type": "string",
            "description": "Photo source URL"
          },
          "alt": {
            "type": "string",
            "description": "Alt text for accessibility"
          },
          "title": {
            "type": "string",
            "description": "Photo title"
          },
          "description": {
            "type": "string",
            "description": "Photo description"
          },
          "category": {
            "type": "string",
            "description": "Photo category"
          },
          "width": {
            "type": "number",
            "description": "Original width in pixels"
          },
          "height": {
            "type": "number",
            "description": "Original height in pixels"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Photo tags"
          },
          "watermark": {
            "type": "string",
            "description": "Watermark text"
          },
          "downloadUrl": {
            "type": "string",
            "description": "Download URL"
          }
        },
        "required": ["id", "src"]
      },
      "description": "Array of photos to display"
    },
    "variant": {
      "type": "string",
      "enum": ["masonry", "grid", "carousel", "lightbox", "instagram"],
      "default": "grid",
      "description": "Gallery layout variant"
    },
    "columns": {
      "type": "number",
      "enum": [2, 3, 4, 5, 6],
      "default": 3,
      "description": "Number of columns"
    },
    "enableLightbox": {
      "type": "boolean",
      "default": true,
      "description": "Enable lightbox view"
    },
    "enableFiltering": {
      "type": "boolean",
      "default": false,
      "description": "Enable category filtering"
    },
    "enableSearch": {
      "type": "boolean",
      "default": false,
      "description": "Enable photo search"
    },
    "enableLazyLoading": {
      "type": "boolean",
      "default": true,
      "description": "Enable lazy loading"
    },
    "enableZoom": {
      "type": "boolean",
      "default": true,
      "description": "Enable zoom on hover"
    },
    "enableDownload": {
      "type": "boolean",
      "default": false,
      "description": "Enable download button"
    },
    "enableSharing": {
      "type": "boolean",
      "default": false,
      "description": "Enable sharing button"
    },
    "animated": {
      "type": "boolean",
      "default": true,
      "description": "Enable animations"
    },
    "autoplay": {
      "type": "boolean",
      "default": false,
      "description": "Autoplay carousel variant"
    },
    "aspectRatio": {
      "type": "string",
      "enum": ["square", "landscape", "portrait", "auto"],
      "default": "auto",
      "description": "Photo aspect ratio"
    },
    "gap": {
      "type": "string",
      "enum": ["sm", "md", "lg"],
      "default": "md",
      "description": "Gap between photos"
    },
    "onPhotoClick": {
      "type": "string",
      "description": "Photo click handler"
    },
    "onDownload": {
      "type": "string",
      "description": "Download handler"
    },
    "onShare": {
      "type": "string",
      "description": "Share handler"
    },
    "className": {
      "type": "string",
      "description": "Additional CSS classes"
    }
  },
  "required": ["type", "photos"],
  "additionalProperties": false
}