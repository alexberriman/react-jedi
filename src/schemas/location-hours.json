{
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "LocationHours"
    },
    "id": {
      "type": "string",
      "description": "Unique identifier for the location hours component"
    },
    "variant": {
      "type": "string",
      "enum": ["single-location", "multiple-locations", "minimal-hours", "detailed-info-cards", "map-integration"],
      "default": "single-location",
      "description": "Display variant"
    },
    "locations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Location identifier"
          },
          "name": {
            "type": "string",
            "description": "Location name"
          },
          "businessHours": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "day": {
                  "type": "string",
                  "enum": ["monday", "tuesday", "wednesday", "thursday", "friday", "saturday", "sunday"],
                  "description": "Day of week"
                },
                "openTime": {
                  "type": "string",
                  "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$",
                  "description": "Opening time (24-hour format)"
                },
                "closeTime": {
                  "type": "string",
                  "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$",
                  "description": "Closing time (24-hour format)"
                },
                "closed": {
                  "type": "boolean",
                  "description": "Is closed this day"
                }
              },
              "required": ["day", "closed"]
            },
            "description": "Regular business hours"
          },
          "specialSchedules": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "date": {
                  "type": "string",
                  "format": "date",
                  "description": "Special date (YYYY-MM-DD)"
                },
                "name": {
                  "type": "string",
                  "description": "Holiday/event name"
                },
                "hours": {
                  "type": "object",
                  "properties": {
                    "openTime": {
                      "type": "string",
                      "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$"
                    },
                    "closeTime": {
                      "type": "string",
                      "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$"
                    }
                  },
                  "required": ["openTime", "closeTime"]
                },
                "closed": {
                  "type": "boolean",
                  "description": "Is closed on this date"
                },
                "message": {
                  "type": "string",
                  "description": "Special message"
                }
              },
              "required": ["date", "name", "closed"]
            },
            "description": "Special schedules/holidays"
          },
          "contact": {
            "type": "object",
            "properties": {
              "phone": {
                "type": "string",
                "description": "Phone number"
              },
              "email": {
                "type": "string",
                "format": "email",
                "description": "Email address"
              },
              "website": {
                "type": "string",
                "format": "uri",
                "description": "Website URL"
              },
              "address": {
                "type": "object",
                "properties": {
                  "street": {
                    "type": "string",
                    "description": "Street address"
                  },
                  "city": {
                    "type": "string",
                    "description": "City"
                  },
                  "state": {
                    "type": "string",
                    "description": "State/Province"
                  },
                  "zipCode": {
                    "type": "string",
                    "description": "ZIP/Postal code"
                  },
                  "country": {
                    "type": "string",
                    "description": "Country"
                  }
                },
                "required": ["street", "city", "state", "zipCode", "country"]
              }
            },
            "required": ["address"]
          },
          "timezone": {
            "type": "string",
            "description": "Timezone (e.g., 'America/New_York')"
          },
          "map": {
            "type": "object",
            "properties": {
              "enabled": {
                "type": "boolean",
                "description": "Enable map display"
              },
              "latitude": {
                "type": "number",
                "description": "Latitude coordinate"
              },
              "longitude": {
                "type": "number",
                "description": "Longitude coordinate"
              },
              "zoom": {
                "type": "number",
                "description": "Map zoom level"
              },
              "showDirectionsLink": {
                "type": "boolean",
                "description": "Show directions link"
              }
            },
            "required": ["enabled"]
          },
          "description": {
            "type": "string",
            "description": "Location description"
          },
          "image": {
            "type": "string",
            "description": "Location image URL"
          },
          "services": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Available services"
          },
          "appointmentBookingUrl": {
            "type": "string",
            "format": "uri",
            "description": "Appointment booking URL"
          }
        },
        "required": ["id", "name", "businessHours", "contact", "timezone"]
      },
      "description": "Array of locations"
    },
    "showCurrentStatus": {
      "type": "boolean",
      "default": true,
      "description": "Show open/closed status"
    },
    "showSpecialSchedules": {
      "type": "boolean",
      "default": true,
      "description": "Show special schedules/holidays"
    },
    "showContactInfo": {
      "type": "boolean",
      "default": true,
      "description": "Show contact information"
    },
    "showServices": {
      "type": "boolean",
      "default": false,
      "description": "Show available services"
    },
    "showAppointmentBooking": {
      "type": "boolean",
      "default": false,
      "description": "Show appointment booking button"
    },
    "allowLocationSearch": {
      "type": "boolean",
      "default": false,
      "description": "Allow searching locations"
    },
    "allowLocationFilter": {
      "type": "boolean",
      "default": false,
      "description": "Allow filtering locations"
    },
    "maxLocationsToShow": {
      "type": "number",
      "description": "Maximum number of locations to display"
    },
    "defaultTimezone": {
      "type": "string",
      "default": "America/New_York",
      "description": "Default timezone"
    },
    "showMap": {
      "type": "boolean",
      "default": false,
      "description": "Show map integration"
    },
    "compactView": {
      "type": "boolean",
      "default": false,
      "description": "Use compact layout"
    },
    "darkMode": {
      "type": "boolean",
      "default": false,
      "description": "Use dark mode styling"
    },
    "statusMessages": {
      "type": "object",
      "properties": {
        "open": {
          "type": "string",
          "description": "Open status message"
        },
        "closed": {
          "type": "string",
          "description": "Closed status message"
        },
        "closingSoon": {
          "type": "string",
          "description": "Closing soon message"
        },
        "openingSoon": {
          "type": "string",
          "description": "Opening soon message"
        }
      },
      "additionalProperties": false
    },
    "className": {
      "type": "string",
      "description": "Additional CSS classes"
    }
  },
  "required": ["type", "locations"],
  "additionalProperties": false
}