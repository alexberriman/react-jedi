{
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "FeatureCard"
    },
    "id": {
      "type": "string",
      "description": "Unique identifier for the feature card component"
    },
    "title": {
      "type": "string",
      "description": "The feature title",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "description": "Feature description text"
    },
    "icon": {
      "type": "string",
      "description": "Icon name or reference for the feature"
    },
    "iconColor": {
      "type": "string",
      "description": "Color for the icon",
      "default": "currentColor"
    },
    "iconSize": {
      "type": "string",
      "enum": ["sm", "md", "lg", "xl"],
      "default": "md",
      "description": "Size of the icon"
    },
    "iconPosition": {
      "type": "string",
      "enum": ["top", "left", "right", "background"],
      "default": "top",
      "description": "Position of the icon"
    },
    "badge": {
      "type": "string",
      "description": "Badge text to display"
    },
    "badgeVariant": {
      "type": "string",
      "enum": ["default", "secondary", "destructive", "outline"],
      "default": "secondary",
      "description": "Badge style variant"
    },
    "variant": {
      "type": "string",
      "enum": ["default", "highlighted", "minimal", "bordered", "gradient", "shadow", "glass"],
      "default": "default",
      "description": "Visual style variant for the card"
    },
    "align": {
      "type": "string",
      "enum": ["left", "center", "right"],
      "default": "left",
      "description": "Content alignment"
    },
    "highlight": {
      "type": "boolean",
      "default": false,
      "description": "Whether to highlight the card"
    },
    "highlightColor": {
      "type": "string",
      "description": "Custom highlight color",
      "default": "hsl(var(--primary))"
    },
    "gradientFrom": {
      "type": "string",
      "description": "Starting color for gradient variant"
    },
    "gradientTo": {
      "type": "string",
      "description": "Ending color for gradient variant"
    },
    "gradientDirection": {
      "type": "string",
      "enum": ["to-r", "to-br", "to-b", "to-bl", "to-l", "to-tl", "to-t", "to-tr"],
      "default": "to-br",
      "description": "Direction of gradient"
    },
    "borderStyle": {
      "type": "string",
      "enum": ["none", "solid", "dashed", "dotted", "double"],
      "default": "solid",
      "description": "Border style"
    },
    "shadowSize": {
      "type": "string",
      "enum": ["none", "sm", "md", "lg", "xl", "2xl"],
      "default": "sm",
      "description": "Shadow size"
    },
    "hoverEffect": {
      "type": "string",
      "enum": ["none", "lift", "glow", "pulse", "rotate"],
      "default": "lift",
      "description": "Hover effect"
    },
    "cta": {
      "type": "object",
      "properties": {
        "text": {
          "type": "string",
          "description": "CTA button text"
        },
        "variant": {
          "type": "string",
          "enum": ["default", "destructive", "outline", "secondary", "ghost", "link"],
          "description": "Button variant"
        },
        "href": {
          "type": "string",
          "description": "URL to navigate to"
        }
      },
      "required": ["text"],
      "description": "Call to action button"
    },
    "link": {
      "type": "string",
      "description": "URL to navigate to when clicked"
    },
    "animated": {
      "type": "boolean",
      "default": true,
      "description": "Whether to animate the card"
    },
    "animationDelay": {
      "type": "number",
      "default": 0,
      "description": "Animation delay in seconds"
    },
    "className": {
      "type": "string",
      "description": "Additional CSS classes"
    },
    "children": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/componentSpecification"
      },
      "description": "Nested child components"
    },
    "category": {
      "type": "string",
      "description": "Category for filtering in tabbed views"
    }
  },
  "required": ["type", "title"],
  "additionalProperties": false
}