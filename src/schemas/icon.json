{
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "icon"
    },
    "id": {
      "type": "string",
      "description": "Unique identifier for the icon component"
    },
    "icon": {
      "type": "string",
      "description": "Icon name or identifier"
    },
    "size": {
      "oneOf": [
        {
          "type": "string",
          "enum": ["xs", "sm", "md", "lg", "xl"]
        },
        {
          "type": "number",
          "description": "Custom size in pixels"
        }
      ],
      "default": "md",
      "description": "Icon size"
    },
    "color": {
      "type": "string",
      "default": "currentColor",
      "description": "Icon color"
    },
    "variant": {
      "type": "string",
      "enum": ["default", "filled", "outlined", "background"],
      "default": "default",
      "description": "Icon variant style"
    },
    "background": {
      "type": "string",
      "description": "Background color (for background variant)"
    },
    "animated": {
      "type": "boolean",
      "default": false,
      "description": "Enable animation"
    },
    "animationType": {
      "type": "string",
      "enum": ["spin", "pulse", "bounce"],
      "default": "spin",
      "description": "Animation type"
    },
    "onClick": {
      "type": "string",
      "description": "Click handler function"
    },
    "ariaLabel": {
      "type": "string",
      "description": "Accessible label for screen readers"
    },
    "className": {
      "type": "string",
      "description": "Additional CSS classes"
    },
    "style": {
      "type": "object",
      "description": "Inline styles"
    }
  },
  "required": ["type", "icon"],
  "additionalProperties": false
}