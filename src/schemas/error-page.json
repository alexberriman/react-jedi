{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ErrorPage",
  "description": "Customizable error page block for 404, 500, maintenance, and coming soon scenarios",
  "type": "object",
  "properties": {
    "type": {
      "const": "ErrorPage"
    },
    "props": {
      "type": "object",
      "properties": {
        "variant": {
          "type": "string",
          "enum": ["friendly-404", "technical-error", "maintenance", "coming-soon", "search-suggestions", "blog", "ecommerce", "magazine", "restaurant", "saas", "portfolio", "corporate"],
          "description": "The type of error page to display"
        },
        "siteType": {
          "type": "string",
          "enum": ["blog", "ecommerce", "magazine", "restaurant", "saas", "portfolio", "corporate"],
          "description": "The type of website, which overrides the variant if provided"
        },
        "title": {
          "type": "string",
          "description": "Custom title for the error page"
        },
        "description": {
          "type": "string",
          "description": "Custom description text"
        },
        "image": {
          "type": "string",
          "description": "URL for a custom image to display"
        },
        "showIcon": {
          "type": "boolean",
          "description": "Whether to show the default icon for the variant",
          "default": true
        },
        "customIcon": {
          "$ref": "#/definitions/ReactNode",
          "description": "Custom icon component to display"
        },
        "homeLink": {
          "type": "string",
          "description": "URL for the home link",
          "default": "/"
        },
        "homeLinkText": {
          "type": "string",
          "description": "Text for the home link button",
          "default": "Go to Homepage"
        },
        "showBreadcrumb": {
          "type": "boolean",
          "description": "Whether to show breadcrumb navigation",
          "default": false
        },
        "breadcrumbItems": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "label": {
                "type": "string",
                "description": "Breadcrumb item label"
              },
              "href": {
                "type": "string",
                "description": "Optional link for the breadcrumb item"
              }
            },
            "required": ["label"]
          },
          "description": "Breadcrumb navigation items"
        },
        "popularLinks": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "label": {
                "type": "string",
                "description": "Link label"
              },
              "href": {
                "type": "string",
                "description": "Link URL"
              },
              "description": {
                "type": "string",
                "description": "Optional description for the link"
              }
            },
            "required": ["label", "href"]
          },
          "description": "Popular page links to display"
        },
        "contactEmail": {
          "type": "string",
          "format": "email",
          "description": "Contact email for support"
        },
        "contactText": {
          "type": "string",
          "description": "Text for the contact button",
          "default": "Contact Support"
        },
        "searchConfig": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Whether to show search functionality",
              "default": false
            },
            "placeholder": {
              "type": "string",
              "description": "Search input placeholder text"
            },
            "onSearch": {
              "type": "string",
              "description": "Search handler function name"
            },
            "searchAction": {
              "type": "string",
              "description": "URL to submit search form to"
            }
          },
          "description": "Search functionality configuration"
        },
        "countdownDate": {
          "type": "string",
          "format": "date-time",
          "description": "Target date for countdown (coming-soon variant)"
        },
        "countdownMessage": {
          "type": "string",
          "description": "Message to display above countdown",
          "default": "Launching in:"
        },
        "animated": {
          "type": "boolean",
          "description": "Whether to show animations",
          "default": true
        },
        "animationDelay": {
          "type": "number",
          "description": "Delay between staggered animations in seconds",
          "default": 0.1
        },
        "customActions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "label": {
                "type": "string",
                "description": "Action button label"
              },
              "onClick": {
                "type": "string",
                "description": "Click handler function name"
              },
              "href": {
                "type": "string",
                "description": "Link URL"
              },
              "variant": {
                "type": "string",
                "enum": ["default", "outline", "ghost"],
                "description": "Button variant"
              }
            },
            "required": ["label"]
          },
          "description": "Custom action buttons"
        },
        "className": {
          "type": "string",
          "description": "Additional CSS classes"
        },
        "children": {
          "$ref": "#/definitions/ReactNode",
          "description": "Additional content to display"
        }
      }
    }
  },
  "required": ["type", "props"],
  "definitions": {
    "ReactNode": {
      "oneOf": [
        { "type": "string" },
        { "type": "number" },
        { "type": "boolean" },
        { "type": "null" },
        { "$ref": "#" },
        {
          "type": "array",
          "items": { "$ref": "#/definitions/ReactNode" }
        }
      ]
    }
  }
}